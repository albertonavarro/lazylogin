        <spring-data-jpa.version>1.2.0.RELEASE</spring-data-jpa.version>
        <commons-lang.version>2.4</commons-lang.version>
        <amq.version>5.1.0</amq.version>
        <testng.version>6.8.7</testng.version>
        <h2.version>1.3.170</h2.version>
    </properties>
