<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <jmxConfigurator />

    <appender name="STDOUT_BUSINESS" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{correlationId}][%X{sessionId}] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.navid" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT_BUSINESS" />
    </root>
</configuration>